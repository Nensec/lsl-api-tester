{
  "$schema": "https://json-schema.org/draft-07/schema",
  "description": "This schema defines how a test suite is properly formatted",
  "type": "object",
  "required": ["name", "version", "tests"],
  "properties": {
    "name": { "type": "string", "description": "The name of your test suite" },
    "version": {
      "type": "string",
      "description": "The version of your test suite, for example the version of your API"
    },
    "tests": {
      "type": "array",
      "description": "The array of tests",
      "items": {
        "type": "object",
        "description": "The object that descibes the test",
        "uniqueItems": true,
        "patternProperties": {
          "^.*$": {
            "type": "object",
            "description": "The object that describes a test",
            "required": ["actions"],
            "properties": {
              "dependencies": {
                "type": "array",
                "items": { "type": "string" },
                "description": "This array defines the list of tests by their name that this test is dependant on"
              },
              "actions": {
                "type": "array",
                "description": "The array that holds the individual tasks to perform as part of this test, this can either be a string that points to a Common Action or an object that defines the task",
                "items": {
                  "type": ["string", "object"],
                  "description": "This object defines a task",
                  "required": ["name", "actionType"],
                  "properties": {
                    "name": {
                      "type": "string",
                      "description": "The name of the task"
                    },
                    "actionType": {
                      "type": "number",
                      "minimum": 0,
                      "maximum": 8,
                      "description": "Which task to perform: 0=SEND, 1=ASK, 2=REZ, 3=EXPECT, 4=RELAY, 5=ATTACH, 6=ASSERT, 7=EXPECTRLV, 8=WAIT"
                    },
                    "parameters": {
                      "type": "array",
                      "description": "The parameters for this task",
                      "items": { "type": ["string", "number"] },
                      "maxItems": 5
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "commonActions": {
      "type": "array",
      "items": {
        "type": "object",
        "uniqueItems": true,
        "patternProperties": {
          "^.*$": {
            "type": "object",
            "description": "This object defines a task",
            "required": ["name", "actionType"],
            "properties": {
              "name": { "type": "string", "description": "The name of the task" },
              "actionType": {
                "type": "number",
                "minimum": 0,
                "maximum": 8,
                "description": "Which task to perform: 0=SEND, 1=ASK, 2=REZ, 3=EXPECT, 4=RELAY, 5=ATTACH, 6=ASSERT, 7=EXPECTRLV, 8=WAIT"
              },
              "parameters": {
                "type": "array",
                "description": "The parameters for this task",
                "items": { "type": ["string", "number"] },
                "maxItems": 5
              }
            }
          }
        }
      }
    }
  }
}
